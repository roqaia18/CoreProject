@using static Project.Controllers.ProductsController
@model Product
@{
    ViewData["Title"] = "Add Proudect";
    Layout = "_Layout";
}

<style>
    .form-control {
        background-color: #eee;
        border: none;
        padding: 12px 15px;
        margin: 8px 0;
        width: 70%;
        height: 35px;
        border-radius: 20px;
        transition: 0.2s ease-in;
    }
</style>



<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Add Proudect</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="~/Home/Index">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="~/Products/Index">Product</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="container">
                    <div class="card-header border-0">
                        <h3 class="mb-0">Add Product</h3>
                    </div>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" placeholder="Product Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Price">Price</label>
                            <input type="tel" asp-for="Price" placeholder="Product Price" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Weight">Weight</label>
                            <input type="tel" asp-for="Weight" placeholder="Product Weight" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Name</label>
                            <textarea asp-for="Description" placeholder="Product Description" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock">Number in Stock</label>
                            <input type="number" asp-for="Stock" placeholder="Product Number in Stock" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Image">Put Link of the Image</label>
                            <input type="text" asp-for="Image" placeholder="Link of Product Image" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Create_Date">Date</label>
                            <input type="date" asp-for="Create_Date" value="@Model.ChangeDateFormat(DateTime.Now)"
                                   max="@Model.ChangeDateFormat(DateTime.Now)" class="form-control" />
                        </div>

                        <button class="btn btn-primary float-right" type="submit">ADD</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>