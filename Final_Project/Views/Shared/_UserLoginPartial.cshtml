@using Microsoft.AspNetCore.Identity
@inject SignInManager<CustomIdentityUser> SignInManager
@inject UserManager<CustomIdentityUser> UserManager


<ul class="navbar-nav ml-auto" style="padding-top:0">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item pl-2 mb-2 mb-md-0">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item pl-2 mb-2 mb-md-0">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "HomeUser", new { area = "" })">
                <button type="submit" class="btn btn-outline-secondary btn-md btn-rounded btn-navbar waves-effect waves-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
