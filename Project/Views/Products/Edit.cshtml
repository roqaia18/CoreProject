@{
}



<div class="container my-2">

    <form method="post">

        <div class="form-group">
            <label asp-for="ID">ID</label>
            <input type="text" class="form-control" value="@Model.ID" readonly asp-for="@Model.ID" />
        </div>

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" placeholder="Product Name" class="form-control" value="@Model.Name" />
        </div>

        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input type="tel" asp-for="Price" placeholder="Product Price" class="form-control" value="@Model.Price" />
        </div>

        <div class="form-group">
            <label asp-for="Weight">Weight</label>
            <input type="tel" asp-for="Weight" placeholder="Product Weight" class="form-control" value="@Model.Weight" />
        </div>

        <div class="form-group">
            <label asp-for="Description">Name</label>
            <textarea asp-for="Description" placeholder="Product Description" class="form-control">@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label asp-for="Stock">Number in Stock</label>
            <input type="number" asp-for="Stock" placeholder="Product Number in Stock" value="@Model.Stock" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Image">Put Link of the Image</label>
            <input type="text" asp-for="Image" placeholder="Link of Product Image" value="@Model.Image" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Create_Date">Date</label>
            <input type="date" asp-for="Create_Date" value="@Model.ChangeDateFormat(Model.Create_Date)" 
                   max="@Model.ChangeDateFormat(DateTime.Now)" class="form-control" />
        </div>

        <button class="btn btn-primary float-right" type="submit">Update</button>


    </form>

</div>